{
  "compilerOptions": {
    "module": "es2015",
    "strict": true,
    "baseUrl": "./",
    "outDir": "./public",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node"],
    "lib": ["dom"],
    "typeRoots": ["node_modules/@types"],
    "jsx": "react"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/public/"]
}
