{
  "compilerOptions": {
    "module": "es2015",
    "strict": true,
    "baseUrl": "./",
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node"],
    "lib": ["dom"],
    "typeRoots": ["node_modules/@types"],
    "jsx": "react",
    "outDir": "null"
  },
  "include": ["./app/**/*.ts", "./frontends/**/*.ts"],
  "exclude": ["./app/public/", "./frontends/public"]
}
